<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bat su kien"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/num1"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        android:hint="Nhap so thu 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/num2"
        app:layout_constraintTop_toBottomOf="@+id/num1"
        android:hint="Nhap so thu 2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtKQ"
        android:text="ket qua"
        android:textColor="#cd8888"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/num2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/bt"
        android:text="ADD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtKQ"/>

    <Spinner
        android:id="@+id/spTinh"
        android:entries="@array/tinh"
        app:layout_constraintTop_toBottomOf="@id/bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>